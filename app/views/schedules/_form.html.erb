<%= form_for @schedule, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :task_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :task_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :isDone, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :isDone, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                schedules_path, :class => 'btn' %>
  </div>
<% end %>
