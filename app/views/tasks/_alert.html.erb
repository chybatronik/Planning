<div class="row">
  <div class="span6 offset2">
  <%if notice%>
    
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= notice %>
    </div>    
  <%end%>
  <%if alert%>
    
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= alert %>
    </div>    
  <%end%>
  </div>
</div>